<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title_text_style">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="sub_title_text_style">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>


    <style name="body_text_style">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="accent_button_style" parent="button_style">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/accent_color</item>
    </style>

    <style name="auth_selection_login_button_style" parent="button_style">
        <item name="android:textColor">@color/accent_color</item>
        <item name="backgroundTint">@color/auth_selection_login_button_color</item>
    </style>
</resources>