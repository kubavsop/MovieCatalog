<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>


    <style name="BodyTextStyle">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="BottomNavTextStyle" parent="BodyTextStyle">
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

    <style name="UserTextStyle" parent="SubTitleTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AverageRatingStyle" parent="TitleTextStyle">
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:layout_height">@dimen/average_rating_height</item>
        <item name="android:layout_width">@dimen/average_rating_width</item>
    </style>

    <style name="GenreStyle" parent="BodyTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/genre_background</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">@dimen/padding_2</item>
        <item name="android:paddingTop">@dimen/padding_2</item>
        <item name="android:paddingStart">@dimen/padding_8</item>
        <item name="android:paddingEnd">@dimen/padding_8</item>
    </style>


    <style name="TextLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_radius</item>
        <item name="boxStrokeColor">@color/stroke_selector</item>
        <item name="boxStrokeWidth">@dimen/stroke_width</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="boxStrokeErrorColor">@color/error_color</item>
    </style>

    <style name="ErrorTextStyle" parent="BodyTextStyle">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/error_color</item>
    </style>

    <style name="HintTextStyle" parent="SubTitleTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/margin_15</item>
    </style>

    <style name="ToggleButtonStyle" parent="BodyTextStyle">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:background">@drawable/toggle_background_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/toggle_text_color_selector</item>
    </style>

    <style name="ButtonStyle" parent="LabelTextStyle">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="AccentButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/accent_text_selector</item>
        <item name="backgroundTint">@color/accent_background_selector</item>
    </style>

    <style name="AuthSelectionLoginButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/accent_color</item>
        <item name="backgroundTint">@color/auth_selection_login_button_color</item>
    </style>
</resources>